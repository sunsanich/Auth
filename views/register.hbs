







<form class="h form-signin" name="registerForm" action="/register" method="post"> 

  <h2  class= "headline" class="form-signin-heading">Please sign up</h2>
 
   <div class="error" >
  {{#if message}}

  <div id="my-alert" style="text-align: center" class="alert alert-{{message.type}} box bounce-1">
  <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span> 
  Тут Ваше сообщение  <strong>{{message.intro}}</strong> {{message.message}}
</div>

  {{/if}}

</div>
 
 
  <label for="inputEmail" class="sr-only">Email address</label></br>
  <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email address" required autofocus></br></br>
 
  <label for="inputUsername" class="sr-only">Username</label></br>
  <input type="text" id="inputUsername" name="usrname" class="form-control" placeholder="Username" required></br></br>
 
  <label for="inputPassword" class="sr-only">Password</label></br>
  <input type="password" id="inputPassword" name="passwrd" class="form-control" placeholder="Password" required></br></br>
 
  <label for="inputConfirmPassword" class="sr-only">Confirm Password</label></br>
  <input type="password" id="inputConfirmPassword" name="confirmationPasswrd" class="form-control" placeholder="Confirm Password" required></br></br>
 
 
 
  <button id="signup" class="btn btn-lg btn-default btn-block" type="submit">Sign up</button>
</form>

<script>
    
    
 
  
        window.setTimeout(function(){
         
		 var ale  = document.getElementById('my-alert')
         if (ale!=null){ ale.style.display='none'}
		  
        },5000);
		
		
		
		
		
   
</script>
	
  
